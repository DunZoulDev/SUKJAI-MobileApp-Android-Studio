                    <ImageButton
                        android:id="@+id/img_od_comingsoon_2"
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        android:layout_marginTop="10dp"
                        android:elevation="5dp"
                        android:translationZ="5dp"
                        android:background="@drawable/od_comingsoon_length_2" />


                    <ImageButton
                        android:id="@+id/img_od_comingsoon_3"
                        android:layout_width="match_parent"
                        android:layout_height="128dp"
                        android:layout_marginTop="10dp"
                        android:elevation="5dp"
                        android:translationZ="5dp"
                        android:background="@drawable/od_comingsoon_length_3" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/gradient_2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:fontFamily="@font/fc_friday_medium"
                    android:text="รายการย้อนหลัง"
                    android:layout_marginLeft="20dp"
                    android:textSize="25sp" />


                <ImageButton
                    android:id="@+id/img_od_old_1"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:elevation="5dp"
                    android:translationZ="5dp"
                    android:background="@drawable/od_old_length_1" />

                <ImageButton
                    android:id="@+id/img_od_old_2"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:elevation="5dp"
                    android:translationZ="5dp"
                    android:background="@drawable/od_old_length_2" />

                <ImageButton
                    android:id="@+id/img_od_old_3"
                    android:layout_width="match_parent"
                    android:layout_height="128dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="5dp"
                    android:translationZ="5dp"
                    android:background="@drawable/od_old_length_3" />

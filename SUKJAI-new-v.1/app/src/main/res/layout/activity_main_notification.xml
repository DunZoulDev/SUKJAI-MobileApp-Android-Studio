<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".notification">

    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="@color/gray4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/icon_schedule_back" />


        <TextView
            android:layout_width="199dp"
            android:layout_height="45dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:text="  การเเจ้งเตือน"
            android:fontFamily="@font/fcminimalregular"
            android:textSize="35sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        android:padding="20dp"
        android:scrollbarSize="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/new1"
                android:fontFamily="@font/fridaymedium"
                android:textSize="25sp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/noti1"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/noti2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/older"
                android:fontFamily="@font/fridaymedium"
                android:textSize="25sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/noti3"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/noti1"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/noti2"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/noti3"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/noti1"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/noti2"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/noti3"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/noti1"
                />



        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>